---
import MainLayout from "../layouts/MainLayout.astro";
import Title from "../components/Title.astro";
---

<MainLayout title="Contact Hirenest" description="Get in touch with our team">
  <section
    class="flex flex-col sm:flex-row px-4 sm:px-[5vw] md:px-[7vw] lg:px-[9vw] bg-[#fff9f2] mb-16"
  >
    <div
      class="w-full sm:w-[45%] flex items-center justify-center py-10 sm:py-0"
    >
      <div class="text-[#414141]">
        <div class="flex items-center gap-2">
          <p class="w-8 md:w-11 h-[2px] bg-[#ee6551]"></p>
          <p class="font-bold text-sm md:text-base text-[#ee6551]">
            CONTACT US
          </p>
        </div>
        <h1
          class="text-3xl sm:py-3 lg:text-5xl font-bold leading-relaxed text-black"
        >
          GET IN TOUCH WITH OUR TEAM
        </h1>
        <p class="leading-relaxed sm:py-3 text-lg font-medium text-gray-500">
          Have questions? We're here to help! Reach out to <span
            class="text-[#ee6551] font-bold">Hirenest</span
          > for support, inquiries, or to learn more about our services.
        </p>
      </div>
    </div>
    <div
      class="w-full sm:w-[55%] py-0 sm:py-15 flex items-center justify-center"
    >
      <svg
        viewBox="0 0 800 600"
        class="w-full h-full"
        xmlns="http://www.w3.org/2000/svg"
      >
        <!-- Background Elements -->
        <circle cx="400" cy="300" r="250" fill="#FFF5EC"></circle>
        <circle cx="400" cy="300" r="200" fill="#FFE4D4" opacity="0.5"></circle>

        <!-- Contact Icons -->
        <circle cx="400" cy="300" r="120" fill="#097850"></circle>
        <circle cx="400" cy="300" r="90" fill="#fff"></circle>

        <!-- Email Icon -->
        <rect x="350" y="270" width="100" height="60" rx="10" fill="#ee6551"
        ></rect>
        <path
          d="M 350 280 L 400 310 L 450 280"
          stroke="#fff"
          stroke-width="4"
          fill="none"></path>

        <!-- Phone Icon -->
        <circle cx="280" cy="300" r="40" fill="#ee6551"></circle>
        <path
          d="M 265 285 Q 280 280 295 285 L 295 315 Q 280 320 265 315 Z"
          fill="#fff"></path>

        <!-- Chat Icon -->
        <circle cx="520" cy="300" r="40" fill="#ee6551"></circle>
        <rect x="505" y="285" width="30" height="20" rx="5" fill="#fff"></rect>
        <circle cx="520" cy="295" r="3" fill="#ee6551"></circle>
      </svg>
    </div>
  </section>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Hero Section -->

    <div class="grid md:grid-cols-2 gap-8 mb-16">
      <!-- Contact Information -->
      <div
        class="bg-white p-4 sm:p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 w-full"
      >
        <div class="space-y-6 sm:space-y-8 mt-4 sm:mt-8">
          <!-- Address -->
          <div class="flex items-start space-x-3 sm:space-x-4">
            <div class="w-8 sm:w-12 h-8 sm:h-12 flex-shrink-0">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="#ee6551"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg sm:text-xl font-bold text-[#097850] mb-2">
                Our Location
              </h3>
              <p class="text-sm sm:text-base text-gray-600">
                19 Cambridge Street
              </p>
              <p class="text-sm sm:text-base text-gray-600">
                Box Hill South, Melbourne, 3128
              </p>
              <p class="text-sm sm:text-base text-gray-600">Australia</p>
            </div>
          </div>

          <!-- Email -->
          <div class="flex items-start space-x-3 sm:space-x-4">
            <div class="w-8 sm:w-12 h-8 sm:h-12 flex-shrink-0">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="#ee6551"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg sm:text-xl font-bold text-[#097850] mb-2">
                Email Us
              </h3>
              <p class="text-sm sm:text-base text-gray-600">
                akash@hirenest.com.au
              </p>
              <p class="text-sm sm:text-base text-gray-600">
                support@hirenest.com
              </p>
            </div>
          </div>

          <!-- Phone -->
          <div class="flex items-start space-x-3 sm:space-x-4">
            <div class="w-8 sm:w-12 h-8 sm:h-12 flex-shrink-0">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="#ee6551"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg sm:text-xl font-bold text-[#097850] mb-2">
                Call Us
              </h3>
              <p class="text-sm sm:text-base text-gray-600">+61 422 488 865</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Map -->
      <div
        class="bg-white p-4 sm:p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 w-full"
      >
        <div class="w-full h-[300px] sm:h-[400px]">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3151.676485434607!2d145.11906447684498!3d-37.821046034455684!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad640ba2494ae45%3A0x889744696d9d279a!2s19%20Cambridge%20St%2C%20Box%20Hill%20VIC%203128%2C%20Australia!5e0!3m2!1sen!2sin!4v1741680721594!5m2!1sen!2sin"
            class="w-full h-full"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
